{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@schemas/*": ["./src/schemas/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"],
}
